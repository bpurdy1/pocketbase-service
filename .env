# Database (SQLite)
DB_PATH=./db/db.sqlite

# Database (libsql remote - alternative to SQLite)
# LIBSQL_URL=libsql://your-db.turso.io
# LIBSQL_AUTH_TOKEN=your-auth-token

# Server
ADDR=:8080

# JWT Authentication
# JWT_SECRET=your-secret-key-min-32-chars-long
# JWT_ISSUER=basic-account-sql
# JWT_EXPIRY=24h
# JWT_REFRESH_EXPIRY=168h

# PocketBase (auth backend on :8090)
# PB_ADDR=0.0.0.0:8080
# PB_ENABLED=true
# PB_DEV=true
# PB_DATA_DIR=./db/pb_data
PB_ADMIN_EMAIL=admin@example.com
PB_ADMIN_PASS=admin123456

# # Local only (no sync)
# LIBSQL_URL=local
# # Or just leave it empty
# LIBSQL_URL=

# SQLite Admin Viewer (https://sqliteadmin.dev)
SQLITE_ADMIN_USERNAME=admin
SQLITE_ADMIN_PASSWORD=admin
SQLITE_ADMIN_ENABLED=true
